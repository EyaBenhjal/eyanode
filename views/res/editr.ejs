<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing <%= ress.Namesalle %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="indres">Dashboard salle</a></li>
            <li class="breadcrumb-item active"><%= ress.Namesalle %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(ress.updatedAt).toUTCString()  %></b>
        <b>SalleId:</b><%= ress._id %>

      </div>
    </div>
  
  </div>
  
  
  <form action="/editr/<%=ress._id %>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="Namesalle">Name salle</label>
        <input type="text" class="form-control" id="Namesalle" name="Namesalle" value="<%= ress.Namesalle  %>" placeholder=" Name salle" >
      </div>
  
      <div class="col">
        <label for=" nbreplace">number</label>
        <input type="text" class="form-control" id=" nbreplace" name="nbreplace" value="<%= ress.nbreplace  %>" placeholder=" nbre place" required>
      </div>
    </div>
      <div class="col">
        <label for="debutres">date debut resservation</label>
        <input type="datetime-local" class="form-control" id="debutres" name="debutres" value="<%= ress.debutres  %>" placeholder="date debut de resservation" required>
      </div>
      <div class="col">
        <label for="finres">date fin reservation </label>
        <input type="datetime-local" class="form-control" id="finres" name="finres" value="<%= ress.finres  %>" placeholder="date fin de reservation" required>
      </div>

  
    <div class="form-group mb-4">
        <label for="details">Salle Details</label>
        <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Salle Details"><%= ress.details  %></textarea>
    </div>
  
    
  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update reservation</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Customer</button>

  
  </form>

  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a ress record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the reservation record of <b class="fw-bold"><%= ress.Namesalle %> </b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/editr/<%= ress._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, Remove ress</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  