<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Reservation</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
      
      </div>
      <div class="btn-group me-2">
        <a href="/addsal" class="btn btn-sm btn-outline-secondary">+ New salle de reunion</a>
      </div>
      <div class="btn-group me-2">
        <a href="/addr" class="btn btn-sm btn-outline-secondary">+ New reservation</a>
      </div>
    
    </div>
  </div>

    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="table-responsive">

      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th scope="col"> Name salle</th>
            <th scope="col">number</th>
            <th scope="col">date debut reservation</th>
            <th scope="col" >date fin reservation</th>
          </tr>
        </thead>
    
        <tbody>
          <% reser.forEach(element => { %>
            <tr class="align-middle">
              <td><%= element.Namesalle %></td>
              <td><%= element.nbreplace %></td>
              <td><%= element.debutres %></td>
              <td><%= element.finres %></td>
              <td class="text-end">
    
                <div class="d-flex flex-row justify-content-end gap-2">
    
                  <a href="/viewsr/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                    <i class="bi bi-eye"></i>
                  </a>
    
                  <a href="/editr/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                    <i class="bi bi-pencil"></i>
                  </a>
    
                  <form action="/editr/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-danger btn-small">
                      <i class="bi bi-person-x"></i>
                    </button>
                  </form>

                </div>

                </td>
                </tr>
                <% }) %>

                </tbody>
                </table>
  </div>
               